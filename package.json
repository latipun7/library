  "packageManager": "yarn@3.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "cm": "cz",
    "lint": "eslint --ext .js,.cjs,.mjs,.jsx,.ts,.tsx .",
    "format": "prettier --check .",
    "test": "echo 'not yet implemented'",
